---

interface Props {
    src :string;
    titulo:string;
    texto: string;
}

const{src,texto,titulo}=Astro.props

---
<div class="container">
    <card class="card">
        <img src={src} alt="imagen de objeto">
        <content class="content">
            <h2>{titulo}</h2>
            <p>{texto}</p>
        </content>
    </card>
    
</div>





<style>

    .container{
        width: 20rem;
        display: flex;
        flex-direction: column;
        background-color: ;
    }

    .card{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .card img{
        width: 100%;
        height: 10rem;
        object-fit: cover;
    }


    .card:hover img{
        filter: grayscale(1)
        brightness(.4)
 
    }


    .content{
        display:none ;
        position: absolute;
        text-align: center;
        color: white;
        margin: 1rem;
        width: 100%;
    }


    .card:hover .content{
        display:flex ;
        flex-direction: column;
        align-items: center;
        color: white;
    }



</style>